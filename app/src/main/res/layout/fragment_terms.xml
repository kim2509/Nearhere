<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <TextView android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="약관동의"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:textSize="19sp"
        android:background="#F66C3C"/>

    <RelativeLayout
        android:id="@+id/layoutTerms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/layoutTerm1"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <CheckBox
                android:id="@+id/chkTerm1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="동의함"/>

            <TextView
                android:id="@+id/txtTerm1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/term_guide1"
                android:textColor="#000099"
                android:textSize="16sp"
                android:singleLine="false"
                android:layout_toLeftOf="@+id/chkTerm1"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutTerm2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/layoutTerm1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/chkTerm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="동의함"/>

            <TextView
                android:id="@+id/txtTerm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/chkTerm2"
                android:text="@string/term_guide2"
                android:singleLine="false"
                android:textColor="#000099"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutTerm3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/layoutTerm2"
            android:layout_marginTop="10dp">

            <CheckBox
                android:id="@+id/chkTerm3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="동의함"/>

            <TextView
                android:id="@+id/txtTerm3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/chkTerm3"
                android:text="@string/term_guide3"
                android:singleLine="false"
                android:textColor="#000099"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutTerm4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/layoutTerm3"
            android:layout_marginTop="10dp">

            <CheckBox
                android:id="@+id/chkTermAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="전체동의"/>

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btnAgree"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/layoutTerms"
        android:layout_centerHorizontal="true"
        style="@style/btn_style"
        android:text="확인" />

</RelativeLayout>
